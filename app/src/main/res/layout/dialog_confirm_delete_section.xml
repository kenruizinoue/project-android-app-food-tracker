<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/confirm_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_text_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/confirm_text_2"
        android:layout_width="301dp"
        android:layout_height="43dp"
        android:text="@string/confirm_text_2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/confirm_text_1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/confirm_text_1" />


</android.support.constraint.ConstraintLayout>